using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Сервіс оренди квартир");

        double price1 = 800;   // Однокімнатна
        double price2 = 1200;  // Двокімнатна
        double price3 = 1500;  // Трикімнатна

        Console.WriteLine("Оберіть тип квартири:");
        Console.WriteLine("1 - Однокімнатна");
        Console.WriteLine("2 - Двокімнатна");
        Console.WriteLine("3 - Трикімнатна");
        Console.Write("Ваш вибір: ");
        int choice = Convert.ToInt32(Console.ReadLine());

        double result = 0;

        if (choice == 1)
        {
            result = price1;
        }
        else if (choice == 2)
        {
            result = price2;
        }
        else if (choice == 3)
        {
            result = price3;
        }
        else
        {
            Console.WriteLine("Невірний вибір!");
            return;
        }

        Console.WriteLine("Вартість оренди: " + result + " грн");
    }
}
